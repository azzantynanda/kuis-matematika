<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.azanty.kuiscerda.MainActivity">

    <Button
        android:id="@+id/btnsoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="newpr"
        android:text="soal baru" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnsoal"
        android:layout_marginTop="15dp"

        android:text="angka1"
        android:textAlignment="center" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:text="Operator"
        android:layout_alignBaseline="@+id/text1"
        android:layout_alignBottom="@+id/text1"
        android:layout_alignLeft="@+id/editoperator"
        android:layout_alignStart="@+id/editoperator" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text2"
        android:layout_alignBottom="@+id/text2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="angka2" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_below="@+id/text1"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/rndmangk1"
        />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_alignBaseline="@+id/rndmangk1"
        android:layout_alignBottom="@+id/rndmangk1"
        android:layout_centerHorizontal="true"
        android:text="+"
        android:textAlignment="center"
        android:id="@+id/editoperator"
        />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:enabled="false"
        android:layout_alignBaseline="@+id/editoperator"
        android:layout_alignBottom="@+id/editoperator"
        android:layout_alignParentRight="true"
        android:id="@+id/rndmangk2"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:id="@+id/editisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rndmangk1"
        android:layout_marginTop="20dp"
        android:inputType="number|numberSigned|numberDecimal"
        android:text="0"
        android:textAlignment="center" />

    <Button
        android:id="@+id/bttncek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editisi"
        android:layout_marginTop="15dp"
        android:onClick="cek"
        android:text="cek jawaban"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bttncek"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text4"
        android:id="@+id/text5"
        android:text="0"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text5"
        android:id="@+id/text6"
        android:text="0"
        />

    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/text8"
        android:layout_alignStart="@+id/text8"
        android:layout_alignTop="@id/text6"
        android:text="jawaban anda salah"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@id/text5"
        android:layout_alignBottom="@id/text5"
        android:layout_toEndOf="@id/rndmangk1"
        android:layout_toRightOf="@id/rndmangk1"
        android:text="jawaban anda benar"
        android:textSize="20dp" />

</RelativeLayout>
